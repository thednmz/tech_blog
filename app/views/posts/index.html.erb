<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner w-50 width:640px height:360px">
    
    <% @posts.each do |post| %>
      <%if post[:id] == Post.maximum(:id) %>
      <div class="carousel-item active">
        <div class="container">
        <img  src="<%= post.imgurl%>" class="d-block w-100" alt="...">
        </div>
          
          <div class="carousel-caption d-none d-md-block">
            <h5><a href="/posts/<%= post[:id]%> " class="link-light"><%= post.title%></a></h5>
            <p><%= truncate(post.body, :lenght => 50 )%></p>
          </div>
        </div>
        <%else%>
        <div class="carousel-item">
          <div class="container">
            <img  src="<%= post.imgurl%>" class="d-block w-100 img-fluid" alt="...">
          </div>
          <div class="carousel-caption d-none d-md-block">
            <h5 ><a href="/posts/<%= post[:id]%>" class="link-light"><%= post.title%></a></h5>
            <p><%= truncate(post.body, :lenght => 50 )%></p>
          </div>
        </div>
        <%end%>
    <% end %>
    
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  
</div>

